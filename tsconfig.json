{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ],
  "include": ["./src/**/*", "styles.d.ts"]
}
